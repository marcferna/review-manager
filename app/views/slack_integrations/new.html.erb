<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">New Slack Integration</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<div class="row">
  <div class="col-lg-12">
    <%= form_for @slack_integration, url: slack_integrations_path do |f| %>
      <div class="form-group">
        <%= f.label :webhook_url %>
        <%= f.text_field :webhook_url, class: 'form-control', placeholder: 'Webhook URL' %>
      </div>
      <div class="form-group">
        <%= f.label :channel %>
        <%= f.text_field :channel, class: 'form-control', placeholder: '#general' %>
      </div>
      <%= f.hidden_field :active, value: true %>
      <%= f.submit 'Create', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
